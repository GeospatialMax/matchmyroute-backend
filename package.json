{
  "name": "timepix-api",
  "description": "Timepix API",
  "version": "0.1.0",
  "private": true,
  "license": "Commercial",
  "author": "Timepix",
  "engines": {
    "node": "^7.0.0"
  },
  "config": {
    "host": "http://localhost",
    "port": "8080",
    "with_services": "true"
  },
  "scripts": {
    "build": "gulp build",
    "clean": "npm prune && gulp clean",
    "swagger-ui": "gulp swagger-ui",
    "deploy-beta": "gcloud beta app deploy -q build/app.yaml",
    "deploy": "gcloud app deploy -q build/app.yaml",
    "gulp": "gulp",
    "lint": "gulp tslint",
    "serve:web": "DOCURL=http://localhost:8080 gulp serve --script build/app.js --with_services $npm_package_config_with_services",
    "start": "node app.js",
    "test": "gulp test",
    "dredd": "dredd $npm_package_config_host:$npm_package_config_port/swagger.yaml $npm_package_config_host:$npm_package_config_port",
    "gulp:dredd": "gulp dredd --script build/app.js",
    "unittest": "gulp unittest",
    "e2etest": "gulp e2etest",
    "preinstall": "npm update",
    "postinstall": "npm prune"
  },
  "dependencies": {
    "babel-core": "^6.21.0",
    "cache-manager": "^2.2.0",
    "cache-manager-memcached-store": "^2.1.0",
    "dotenv": "^4.0.0",
    "es6-promisify": "^5.0.0",
    "joi": "^10.1.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-qs": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^2.0.0",
    "koa2-cors": "^2.0.2",
    "lodash": "^4.17.2",
    "moment": "^2.17.0",
    "node-yaml": "^3.0.3",
    "request": "^2.79.0",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.5.40",
    "@types/koa": "^2.0.37",
    "@types/lodash": "^4.14.43",
    "@types/node": "^6.0.46",
    "chai": "^3.5.0",
    "dredd": "^2.2.5",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-cli": "^1.2.2",
    "gulp-env": "^0.4.0",
    "gulp-istanbul": "^1.1.1",
    "gulp-jasmine": "^2.4.2",
    "gulp-nodemon": "^2.2.1",
    "gulp-replace": "^0.5.4",
    "gulp-run": "^1.7.1",
    "gulp-shell": "^0.5.2",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-tslint": "^6.1.3",
    "gulp-typescript": "^3.1.3",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "jsonfile": "^2.4.0",
    "node-yaml": "^3.0.3",
    "remap-istanbul": "^0.8.2",
    "request": "^2.78.0",
    "run-sequence": "^1.2.2",
    "swagger-ui": "^2.2.10",
    "tslint": "^3.15.1",
    "typescript": "^2.1.4"
  }
}
